{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    // 相対パスとしてimportしない場合にnode_modulesを見に行くようになる。
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    // logic which you can use without import ing modules
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "@types/node",
      "@nuxtjs/vuetify",
      "@nuxtjs/auth-next",
      "@types/nuxtjs__auth"
    ],
    // importtant!! (make to be able to use vuex type modules)
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}